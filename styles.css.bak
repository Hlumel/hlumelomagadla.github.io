body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
    background: url('https://images.pexels.com/photos/5077046/pexels-photo-5077046.jpeg') no-repeat center center fixed;
    background-size: cover;
    color: #333;
}

header {
    background: rgba(0, 0, 0, 0.8);
    color: #fff;
    padding: 1rem 0;
    text-align: center;
}

nav ul {
    list-style: none;
    padding: 0;
}

nav ul li {
    display: inline;
    margin: 0 10px;
}

nav ul li a {
    color: #fff;
    text-decoration: none;
}

section {
    background: rgba(255, 255, 255, 0.9);
    margin: 20px;
    padding: 20px;
    border-radius: 8px;
}

section h2 {
    text-align: center;
}

.profile {
    display: flex;
    align-items: center;
    gap: 20px;
}

.profile img {
    border-radius: 50%;
    width: 150px;
    height: 150px;
    object-fit: cover;
}

section .form-group {
    margin-bottom: 15px;
}

section .form-group label {
    display: block;
    margin-bottom: 5px;
}

section .form-group input,
section .form-group textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

section#contact button {
    background-color: #333;
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

section#contact button:hover {
    background-color: #555;
}

footer {
    background: rgba(0, 0, 0, 0.8);
    color: #fff;
    text-align: center;
    padding: 1rem 0;
}

@media (max-width: 600px) {
    nav ul li {
        display: block;
        margin: 5px 0;
    }

    nav ul {
        text-align: center;
    }

    header {
        padding: 0.5rem 0;
    }

    .profile {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }
}
